@model Tuple<AddWebAPI.Models.User, List<AddWebAPI.Models.Experience>>

@{
    ViewData["Title"] = "Details";
}


<h1>User Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item1.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item1.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item1.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item1.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item1.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item1.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item1.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item1.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item1.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item1.DateOfBirth)
        </dd>
    </dl>
    <div>
        <a asp-action="CreateExperience" asp-route-id="@Model.Item1.Id">Add Experience</a> |
        <a asp-action="Edit" asp-route-id="@Model.Item1.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>

    <hr />
    <h3>User Details</h3>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(Model => Model.Item2.FirstOrDefault().Position)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Item2.FirstOrDefault().CompanyName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Item2.FirstOrDefault().FromDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Item2.FirstOrDefault().ToDate)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Item2)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Position)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanyName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FromDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ToDate)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
